FROM node:18-alpine

# Install curl for health checks
RUN apk add --no-cache curl

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm ci --only=production

# Copy source code
COPY src ./src

# Create uploads directory for multer
RUN mkdir -p uploads

# Expose the port
EXPOSE 3000

# Start the application
CMD ["node", "src/app.js"]
